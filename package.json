{
  "name": "gleanup",
  "version": "0.0.0",
  "description": "Read your project files recursively and print them in a clean format for LLMs, reviews, or sharing.",
  "main": "./dist/main.js",
  "module": "./dist/main.mjs",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.mjs",
      "default": "./dist/main.js"
    }
  },
  "files": [
    "dist/**",
    "src/**"
  ],
  "scripts": {
    "all": "run-s lint test build",
    "build": "tsup src/main.ts --dts --format esm,cjs",
    "release": "npm run build && changeset publish",
    "lint": "tsc --noEmit",
    "test": "ava",
    "upgrade-deps": "npx taze -r --interactive",
    "check-deps": "npx taze -r"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@types/node": "^22.15.18",
    "ava": "^6.3.0",
    "c8": "^10.1.3",
    "esbuild-register": "^3.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "keywords": [],
  "author": "Thada Wangthammang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thaitype/gleanup.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/thaitype/gleanup#readme",
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "esbuild-register"
    ]
  },
  "dependencies": {
    "ansis": "^4.0.0",
    "cleye": "^1.3.4",
    "clipboardy": "^4.0.0",
    "glob": "^11.0.2",
    "tiny-glob": "^0.2.9"
  }
}
